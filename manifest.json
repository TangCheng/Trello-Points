{
	"manifest_version": 2,
	"name": "Trello Points",
	"version": "0.4",
	"description": "Enhance Trello's cards with freely configurable points",
	"browser_action": {
		"default_title": "Trello Points",
    	"default_icon": "images/icon.png"
  	},
  	"options_page": "options.html",
  	"permissions": [ "background" ],
    "background_page": "background.html",
	"content_scripts": [
		{
			"matches": ["https://trello.com/*"],
			"js": ["jquery-1.7.1.min.js","utils.js", "parser.js", "filter.js","pointpicker.js", "card.js", "list.js", "trellopoints.js"],
			"css": ["trellopoints.css"]
		}
	]
}
